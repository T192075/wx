                    </view>
                    <block wx:else>
                        <list-empty bind:__l="__l" class="data-v-62d94076" img="{{app.images.empty2}}" text="您还没有收藏" vueId="{{'e32228ee-5-'+tabIndex}}" wx:if="{{tab[$orig].init}}"></list-empty>
                    </block>
                    <tm-spin bind:__l="__l" class="data-v-62d94076" color="#c09351" vueId="{{'e32228ee-6-'+tabIndex}}" wx:if="{{tab[$orig].loading}}"></tm-spin>
                </scroll-view>
            </swiper-item>
        </swiper>
    </view>
</view>

<view class="favorites data-v-62d94076">
    <top-bar bgColor="transparent" bind:__l="__l" class="data-v-62d94076" color="#fff" left="{{true}}" mask="{{true}}" title="我的收藏" vueId="e32228ee-1"></top-bar>
    <head-bg bind:__l="__l" class="data-v-62d94076" headBgUrl="{{app.images.headBg.favorites}}" vueId="e32228ee-2"></head-bg>
    <view class="page-inner data-v-62d94076">
        <view class="tabs-wrapper data-v-62d94076">
            <view class="tabs-select-swiper data-v-62d94076">
                <view ariaChecked="{{index==currentType}}" ariaRole="radio" bindtap="__e" class="{{['tabs-select-item','data-v-62d94076','tabs-select-item-'+index,index==currentType?'active':'']}}" data-event-opts="{{[ [ 'tap',[ [ 'changeType',[index] ] ] ] ]}}" wx:for="{{tabList}}" wx:for-item="tab" wx:key="index">{{''+tab.title+''}}</view>
                <view class="{{['tabs-zs','_div','data-v-62d94076','tabs-zs-'+currentType]}}">
                    <view class="tabs-zs-item tabs-zs-item-height data-v-62d94076"></view>
                </view>
